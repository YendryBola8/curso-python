def imprimir_nombre(nombre):
	n = str(nombre)
	print("HOLA " + n)

def hola(nombre="John Doe", multiplicador=7):
	if multiplicador > 5:
		imprimir_nombre(nombre)
		print("Demasiados nombres")
		return nombre
	
	for i in range(multiplicador):
		imprimir_nombre(nombre)

	return nombre








